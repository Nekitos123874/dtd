<?xml version="1.0" encoding="UTF-8"?>
<xsl:stylesheet version="1.0" xmlns:xsl="http://www.w3.org/1999/XSL/Transform">

  <xsl:key name="courses-by-topic" match="course/topic" use="." />
  <xsl:key name="courses-by-teacher" match="course" use="teacher" />

  <xsl:template match="/">
    <html>
      <body>
        <h1>Наши курсы</h1>

        <h3>Курсы, которые читает Борисов И.О.</h3>
        <ul>
          <xsl:for-each select="key('courses-by-teacher', 'Борисов И.О.')">
            <li><xsl:value-of select="name" /></li>
          </xsl:for-each>
        </ul>

        <h3>Курсы, которые используют XML</h3>
        <ul>
          <xsl:for-each select="key('courses-by-topic', 'XML')">
            <li><xsl:value-of select="../name" /></li>
          </xsl:for-each>
        </ul>

        <h3>Курсы Борисова И.О., в которых есть тема XSLT</h3>
        <ul>
          <xsl:for-each select="key('courses-by-teacher', 'Борисов И.О.')">
            <xsl:if test="topic = 'XSLT'">
              <li><xsl:value-of select="name"/></li> 
            </xsl:if>
          </xsl:for-each>
        </ul>
      </body>
    </html>
  </xsl:template>

</xsl:stylesheet>
